.container
  .jumbotron
    h2 Sign Up
  section(ng-controller='SignupController as signup')
    form.form-sigin(method='post', ng-submit='signup.doSignup()')
      br
      | Username
      input.form-control(type='text', name='username', ng-model='signup.signupData.username')
      br
      | Password
      input.form-control(type='password', name='password', ng-model='signup.signupData.password')
      br
      | First Name
      input.form-control(type='text', name='firstname', ng-model='signup.signupData.firstname')
      br
      | Last Name
      input.form-control(type='text', name='lastname', ng-model='signup.signupData.lastname')
      br
      | Email
      input.form-control(type='text', name='email', ng-model='signup.signupData.email')
      br
      | Role
      input.form-control(type='text', name='role', ng-model='signup.signupData.role')
      br
      button.btn.btn-success(type='submit') Signup
    p
      a(href='/login') Already Registered? Login here.
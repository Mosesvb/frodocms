.container
  section
    .heading
        h3 {{ login.user.name.last }}'s documents
      .panel-body(ng-repeat='each in document.documents | reverse')
        h3.title-small {{ each.title }}
        p {{ each.content }}
        p Created: {{ each.dateCreated }}
        br
        button.btn.btn-success(type='submit') Update
